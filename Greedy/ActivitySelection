#include<bits/stdc++.h> 
using namespace std;

struct Activity{
    int start , end ; 
};

bool activityCompare(Activity s1 , Activity s2){
    return s1.end<s2.end; 
}

int main()
 {
	int test ;
	cin>>test ;
	while(test--){
	    int n ;
	    cin>>n ;
	    Activity arr[n] ;
	    for(int x = 0 ;x<n;x++){
	        cin>>arr[x].start ;
	    }
	    
	    for(int x =0;x<n;x++){
	        cin>>arr[x].end; 
	    }
	 sort(arr , arr+n, activityCompare);
	   int y =  0 ;
	   int count =1 ;
	   for(int x = 1 ;x<n ;x++){
	       if(arr[x].start >= arr[y].end){
	           count++;
	           y = x ; 
	       }
	   }
	   cout<<count<<endl; 
	    
	}
	return 0;
}

-------------------------------------------------------------------------------------
Input:
2
6
1 3 2 5 8 5
2 4 6 7 9 9
4
1 3 2 5
2 4 3 6

Output:
4
4
